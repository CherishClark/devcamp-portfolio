<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], :title => "Cherish Clark's Portfolio", sticky: false) %>
  <% elsif flash[:error] %>
      <%= js add_gritter(flash[:error], :title => "Cherish Clark's Portfolio", sticky: false) %>
  <% else flash[:notice] %>
      <%= js add_gritter(flash[:notice], :title => "Cherish Clark's Portfolio", sticky: false) %>
<% end %>